set -euxo pipefail

git describe --dirty --always --long

# Check formatting
cargo fmt -- --check

# Build and lint (we deliberately want to have CARGOFLAGS spliced on into the command line)
# shellcheck disable=SC2086
cargo build --locked --all-targets ${CARGOFLAGS:-}
# shellcheck disable=SC2086
cargo clippy --locked --all-targets ${CARGOFLAGS:-}
# shellcheck disable=SC2086
cargo test --locked --all-targets ${CARGOFLAGS:-}

# Check known vulnerabilities
cargo audit
# Check denied dependencies
cargo deny check

# Check shellscripts
shellcheck scripts/*
